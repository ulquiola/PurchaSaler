@model PagedList.IPagedList<PurchaSalerUI.ViewModel.GoodViewModel>
@using PagedList.Mvc
@{
    ViewBag.Title = "Home Page";
}

@section head{
    <link href="~/Content/css/index.css" rel="stylesheet" />
    <link href="~/Content/css/PagedList.css" rel="stylesheet" />
}

<div class="header">
    <div class="header-content">
        <div class="navbar-wrap">
            <div class="row">
                <div class="col-md-6">
                    <div class="navbar-brand" style="color:white"><h2>PurchaSaler</h2></div>
                </div>
                <div class="col-md-6">
                    <div class="funbo">
                        <a href="/Home/index">首页</a>
                        <a href="#">我的置闲</a>
                    </div>
                </div>
            </div>
        </div>

        @*<div class="area-avatar">
            <img src="~/Content/img/default_avatar.png" class="avatar" />
            <div class="loginbt"><a href="/User/Login" style="text-decoration:none">请登录</a></div>
            <div><a href="#" style="text-decoration:none">免费注册</a></div>
        </div>*@
        @Html.Partial("_PartialAvatar")

    </div>
</div>

<div class="area-content">
    <div class="ctrl-warp">
        <div class="row">
            <div class="col-sm-8">
                @using (Html.BeginForm())
                {
                    <div class="search-bar">
                        <input type="text" placeholder="请输入关键字搜索" name="SearchString" />
                        <button type="submit">搜索</button>
                    </div>
                }
                @*<div class="search-bar">
                        <input type="text" placeholder="请输入关键字搜索" value="" />
                        <button type="submit">搜索</button>
                    </div>*@
            </div>
            <div class="col-sm-4">
                <img src="~/Content/img/add.png" style="width:56px;height:56px" />
                <p><a id="issue" href="/Good/AddGoods" style="text-decoration:none">发布置闲</a></p>
            </div>
        </div>
    </div>

    <div class="category">
        @Html.ActionLink("生活百货", "Index", "Home", new { CategoryID = 1 }, new { @class = "item" })
        @Html.ActionLink("手机数码", "Index", "Home", new { CategoryID = 2 }, new { @class = "item" })
        @Html.ActionLink("书籍", "Index", "Home", new { CategoryID = 3 }, new { @class = "item" })
        @Html.ActionLink("男装", "Index", "Home", new { CategoryID = 4 }, new { @class = "item" })
        @Html.ActionLink("女装", "Index", "Home", new { CategoryID = 5 }, new { @class = "item" })
        @Html.ActionLink("服饰配件", "Index", "Home", new { CategoryID = 6 }, new { @class = "item" })
        @Html.ActionLink("电器", "Index", "Home", new { CategoryID = 7 }, new { @class = "item" })
        @Html.ActionLink("美妆", "Index", "Home", new { CategoryID = 8 }, new { @class = "item" })
        @Html.ActionLink("游戏装备", "Index", "Home", new { CategoryID = 9 }, new { @class = "item" })
        @Html.ActionLink("游戏交易", "Index", "Home", new { CategoryID = 10 }, new { @class = "item" })
        @Html.ActionLink("水果零食", "Index", "Home", new { CategoryID = 11 }, new { @class = "item" })
        @*<a href="" class="item">生活百货</a>
        <a href="" class="item">手机数码</a>
        <a href="" class="item">书籍</a>
        <a href="" class="item">男装</a>
        <a href="" class="item">女装</a>
        <a href="" class="item">服饰配件</a>
        <a href="" class="item">电器</a>
        <a href="" class="item">美妆</a>
        <a href="" class="item">游戏装备</a>
        <a href="" class="item">游戏交易</a>
        <a href="" class="item">水果零食</a>*@
    </div>

    <div class="goods">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="card">
                    <img src="@item.GoodPhoto" />
                    <div class="info">
                        <div class="desc"><p>@item.GoodDescribe</p></div>
                        <div class="price">
                            <p>￥@item.Price</p>
                        </div>
                        <hr style="margin:5px 0 5px 0" />
                        <div class="saler">
                            <img src="@item.Avatar" alt="头像" />
                            <p class="user-name" style="display:inline">@item.UserName</p>
                            <a href="#" class="shopname" style="display:inline">@item.ShopName</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <br />
    @Html.PagedListPager(Model, Page => Url.Action("Index", new {Page,currentFilter = ViewBag.CurrentFilter }))


</div>