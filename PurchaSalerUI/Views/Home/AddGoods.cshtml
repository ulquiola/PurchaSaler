
@{
    ViewBag.Title = "AddGoods";
}
<style>
    .Addform{
        margin:150px;
        text-align:center
    }

    .Addform .title input{
        width:60%;
        height:50px;
        margin:20px;
        border-radius:5px;
    }
    .Addform .describe input{
        width:60%;
        height:200px;
        margin-bottom:20px;
        border-radius:5px;
    }

    .photo img{
        width:150px;
        height:150px;
        border:1px solid #ffd800
    }

    .Addform .btn{
        margin:20px
    }
</style>


<form action="/" method="post" class="Addform">
    <h2>发布置闲</h2>
    <div class="title">
        <input type="text" name="title" placeholder="标题 品类名 品牌型号 都是买家喜欢搜索的" />
    </div>
    <div class="describe">
        <input type="text" name="desc" placeholder="描述宝贝的转手原因、入手渠道和使用感受" />
    </div>
    <div class="photo">
        <img src="#" alt="宝贝图片" />
        <input type="file" name="photo" value="选择图片" />
    </div>
    <div class="adress">

    </div>
    <div class="quality">

    </div>
    <div class="btn"><input type="submit" name="sub" value="确认发布" /></div>
</form>