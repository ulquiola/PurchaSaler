@model Models.User
@{
    ViewBag.Title = "UserCenter";
}
@section head{
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/usercenter(new).css" rel="stylesheet" />
    <style>
        .router {
            line-height: 53px;
            height: 60px;
            background: #ffdc61
        }

            .router li {
                float: left;
                margin-right: 6px;
                color: #808080;
            }

                .router li a {
                    color: inherit;
                }

                    .router li a:hover {
                        color: #239ee2;
                    }

            .router .divider:after {
                content: '>';
            }
    </style>
}
<div class="router">
    <ul class="nav align-left">
        <li><a href="/Home/Index">首页</a></li>
        <li><span class="divider"></span></li>
        <li><span>用户中心</span></li>
    </ul>
</div>
<form action="/User/UpdateUserInfo" method="post">
    <div class="avatar">
        <img src="@ViewBag.Avatar" alt="头像" width="400" height="400" />
        <input type="file" name="image" value="选择图片" />
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input class="form-control" type="text" name="name" value="@ViewBag.UserName" />
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tel, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="number" class="form-control" name="tel" value="@ViewBag.Tel" />
            @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="email" class="form-control" name="email" value="@ViewBag.Email" />
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="修改" class="btn btn-default" />
        </div>
    </div>
</form>
